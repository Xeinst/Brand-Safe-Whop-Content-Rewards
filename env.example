# Whop App Environment Variables
# Copy these to .env.local and fill in your actual values from Whop Dashboard

# Whop App Configuration (Frontend - Vite)
VITE_WHOP_APP_ID=your_app_id_here
VITE_WHOP_APP_SECRET=your_app_secret_here
VITE_WHOP_APP_ENV=development
VITE_WHOP_APP_BASE_URL=http://localhost:3000

# Whop App Configuration (Backend - Vercel)
WHOP_APP_ID=your_app_id_here
WHOP_APP_SECRET=your_app_secret_here
WHOP_APP_ENV=development
WHOP_APP_BASE_URL=http://localhost:3000

# Database connection (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:[password]@[host]:5432/postgres

# YouTube API Keys
VITE_YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here

# Optional: OpenAI API Key for content moderation
OPENAI_API_KEY=your_openai_api_key_here

# Node Environment
NODE_ENV=development
